---
import { EXPLORE } from "../consts/explore";
---

<section class="-mb-70">
    <section
        class="flex flex-col pt-10 p-4 justify-center items-center text-center"
    >
        <h3 class="text-5xl p-6">Explore our options</h3>
        <p class="text-3xl text-center p-4">
            Feast your eyes on fantastical cakes, Edible blooms, Flower Cupcakes
            Bouquet
        </p>
        <figure>
            <img
                class=""
                src="/images/cakes/floralCake.webp"
                alt="Floral Cake"
            />
        </figure>
    </section>
    {
        EXPLORE.map(({ title,img, description, props }, index) => (
            <section
                style={{
                    background: `${props.bg}`,
                    transform: `translateY(calc(-100px * ${index}))`,
                }}
                class="flex flex-col p-4 justify-center items-center bg-blue-400 rounded-t-4xl transform pb-12 "
            >
                <h3 class="text-5xl p-2 text-center font-bold">{title}</h3>
                <p class="text-center text-[18px] font-merienda">
                    {description}
                </p>
                <buton class="flex w-1/3 m-auto p-2 bg-transparent text-gray-500 border rounded-4xl items-center justify-center">
                    View All
                </buton>
                <figure class="">
                    <img
                        class="animate-slideIn"
                        src={`${img}.webp`}
                        alt="Floral Cake"
                    />
                </figure>
            </section>
        ))
    }


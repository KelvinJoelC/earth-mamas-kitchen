<style>
    @keyframes slideIn {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(50px);
        }
    }
    .animate-slideIn {
        animation: slideIn 0.5s ease-in-out both;
        animation-timeline: view(50% 30%);
    }
</style>

---
import { EXPLORE } from "../consts/explore";
---

<section class="-mb-70">
    <section class="flex flex-col pt-30 p-4 justify-center items-center text-center text-white">
        <h3 class="text-5xl mx-2 px-8 font-bold">Explore the BR Range</h3>
        <p class="text-xl text-center m-10">
            Feast your eyes on fantastical cakes, Edible blooms, Flower Cupcakes
            Bouquet
        </p>
        <figure>
            <img
                class="m-2"
                src="/images/cakes/floralCake.webp"
                alt="Floral Cake"
            />
        </figure>
    </section>
    {
        EXPLORE.map(({ title,img, description, props }, index) => (
            <section
                style={{
                    background: `${props.bg}`,
                    transform: `translateY(calc(-100px * ${index}))`,
                }}
                class="flex flex-col p-4 justify-center items-center bg-blue-400 rounded-t-4xl transform pb-12 "
            >
                <h3 class="text-5xl p-2  mt-6 text-center font-bold">{title}</h3>
                <p class="text-center text-xl py-6 px-2">
                    {description}
                </p>
                <buton class="flex w-2/5 m-auto p-3 bg-white text-black border border-gray-300 font-bold rounded-4xl items-center justify-center">
                    View All
                </buton>
                <figure class="">
                    <img
                        class="animate-slideIn"
                        src={`${img}.webp`}
                        alt="Floral Cake"
                    />
                </figure>
            </section>
        ))
    }

